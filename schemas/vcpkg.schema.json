{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "vcpkg Manifest (local subset)",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "$schema": { "type": "string" },
    "name": { "type": "string" },
    "version": { "type": "string" },
    "description": { "type": "string" },
    "homepage": { "type": "string", "format": "uri" },
    "license": { "type": "string" },
    "builtin-baseline": { "type": "string" },
    "dependencies": {
      "type": "array",
      "items": {
        "anyOf": [
          { "type": "string" },
          {
            "type": "object",
            "required": [ "name" ],
            "properties": {
              "name": { "type": "string" },
              "version": { "type": "string" },
              "version>=": { "type": "string" },
              "default-features": { "type": "boolean" }
            },
            "additionalProperties": true
          }
        ]
      }
    }
  },
  "required": [ "name", "version", "dependencies" ]
}
