{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)",
    ":separateMultipleMajorReleases",
    "group:monorepos"
  ],
  "enabledManagers": ["npm", "github-actions", "vcpkg", "regex"],
  "timezone": "Europe/Moscow",
  "schedule": ["after 22:00 on saturday"],
  "branchPrefix": "renovate/",
  "rebaseWhen": "behind-base-branch",
  "dependencyDashboardTitle": "üì¶ –û–±–Ω–æ–≤–ª–µ–Ω–∏—è –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π (Renovate)",
  "dependencyDashboardAutoclose": true,
  "labels": ["dependencies", "automated"],
  "prConcurrentLimit": 10,
  "prHourlyLimit": 2,
  "assigneesFromCodeOwners": true,
  "reviewersFromCodeOwners": true,
  "commitBodyTable": true,
  "rollbackPrs": true,
  "suppressNotifications": ["prIgnoreNotification"],
  "prCreation": "not-pending",
  "postUpdateOptions": ["npmDedupe"],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 04:00 on monday"],
    "commitMessageAction": "refresh",
    "labels": ["dependencies", "lockfile"],
    "prPriority": -2
  },
  "packageRules": [
    {
      "description": "Automerge –±–µ–∑–æ–ø–∞—Å–Ω—ã—Ö –æ–±–Ω–æ–≤–ª–µ–Ω–∏–π GitHub Actions",
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true,
      "automergeType": "pr",
      "requiredStatusChecks": []
    },
    {
      "description": "–ì—Ä—É–ø–ø–∞ npm dev-–∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π VS Code —Ä–∞—Å—à–∏—Ä–µ–Ω–∏—è",
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "groupName": "VS Code dev dependencies",
      "stabilityDays": 3,
      "prPriority": -1,
      "labels": ["dependencies", "npm", "dev"],
      "requiredStatusChecks": [],
      "schedule": ["every weekend"],
      "automerge": false,
      "rangeStrategy": "bump"
    },
    {
      "description": "–ê–≤—Ç–æ–æ–±–Ω–æ–≤–ª–µ–Ω–∏–µ npm runtime –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π –º–∞–ª—ã–º–∏ –≤–µ—Ä—Å–∏—è–º–∏",
      "matchManagers": ["npm"],
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "VS Code runtime deps",
      "stabilityDays": 7,
      "labels": ["dependencies", "npm"],
      "automerge": true,
      "automergeType": "pr",
      "requiredStatusChecks": [],
      "rangeStrategy": "bump"
    },
    {
      "description": "–û—Å–Ω–æ–≤–Ω—ã–µ –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è vcpkg –±–∏–±–ª–∏–æ—Ç–µ–∫",
      "matchManagers": ["vcpkg"],
      "matchUpdateTypes": ["major"],
      "separateMinorPatch": true,
      "groupName": "vcpkg majors",
      "labels": ["dependencies", "c++", "breaking"],
      "stabilityDays": 10,
      "assignees": ["{{maintainers}}"],
      "reviewers": ["{{maintainers}}"],
      "automerge": false
    },
    {
      "description": "–ú–∏–Ω–æ—Ä–Ω—ã–µ –∏ –ø–∞—Ç—á-–æ–±–Ω–æ–≤–ª–µ–Ω–∏—è vcpkg",
      "matchManagers": ["vcpkg"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "vcpkg minors",
      "labels": ["dependencies", "c++"],
      "stabilityDays": 5,
      "automerge": true,
      "automergeType": "pr",
      "requiredStatusChecks": []
    },
    {
      "description": "–û–±–Ω–æ–≤–ª–µ–Ω–∏—è –¥–ª—è TypeScript tooling",
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["typescript", "eslint", "@typescript-eslint/"],
      "labels": ["dependencies", "lint", "typescript"],
      "stabilityDays": 5,
      "automerge": false,
      "separateMinorPatch": true
    },
    {
      "description": "–ì–ª–æ–±–∞–ª—å–Ω–∞—è –∑–∞—â–∏—Ç–∞ –æ—Ç major –∞–≤—Ç–æ—Å–ª–∏—è–Ω–∏–π",
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "description": "–û–±–Ω–æ–≤–ª–µ–Ω–∏—è –∏–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç–æ–≤ —Ñ–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏—è",
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["prettier"],
      "groupName": "Formatting toolchain",
      "labels": ["dependencies", "formatting"],
      "stabilityDays": 7,
      "automerge": false
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^vcpkg\\.json$"],
      "matchStrings": ["\\\"builtin-baseline\\\": \\\"(?<currentDigest>[a-f0-9]{40})\\\""],
      "datasourceTemplate": "github-commits",
      "depNameTemplate": "microsoft/vcpkg",
      "versioningTemplate": "github",
      "commitMessageTopic": "vcpkg baseline",
      "extractVersionTemplate": "{{#if newValue}}{{newValue}}{{/if}}"
    }
  ]
}
